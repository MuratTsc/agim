                            <% } %>
                        </div>
                        <div style="margin: 45%; display:none;" id="cbDivB">
                            B <input type="checkbox" id="testCevapB" name="testCevap" value="B">
                        </div>
                        <% } else if (sorular.testCevapTipi == 2) { %>
                        <div style="margin: 45%; display:none;" id="rdDivB">
