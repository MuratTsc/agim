<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Ünite Düzenle</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <% if(mesaj=="ok" ) { %>
  <div class="alert alert-success">
    <strong>Ünite bilgileri güncellendi.</strong>
  </div>
  <% } %>
  <% if(mesaj=="err" ) { %>
  <div class="alert alert-danger">
    <strong>Hata!</strong> Bilgiler güncellenemedi!
  </div>
  <% } %>

  <form action="../uniteDuzenle" method="POST">
      <input type="text" class="hidden" id="uniteId" name="uniteId" value="<%= unite.id%>">
      
    <div class="form-group">
      <label for="uniteAdi">Ünite Adı:</label>
      <input type="text" class="form-control" id="uniteAdi" placeholder="Ünite Adı" name="uniteAdi" required value="<%= unite.uniteAdi%>">
    </div>
    <div class="form-group">
      <label for="uniteNo">Ünite No:</label>
        <input type="number" class="form-control" id="uniteNo" placeholder="Ünite No" name="uniteNo"  min="1" max="99" required value="<%= unite.uniteNo%>">
    </div>
    <div class="form-group">
      <label for="sinif">Sınıf:</label>
      <select class="form-control" id="sinif" name="sinif" required>
        <% for (var i=0; i < sinif.length; i++) { %>
            <% if (sinif[i].id == unite.sinif_id ) { %>
                <option value="<%= sinif[i].id %>" selected><%= sinif[i].sinifi %></option>
            <% } else { %>
                <option value="<%= sinif[i].id %>" ><%= sinif[i].sinifi %></option>
            <% } %>
        <% } %>
      </select>
    </div>
    <div class="form-group">
      <label for="ders">Ders:</label>
      <select class="form-control" id="ders" name="ders" required>
        <option value="" >Önce Sınıf Seçiniz</option>
        <% for (var i=0; i < ders.length; i++) { %>
            <% if (ders[i].id == unite.ders_id ) { %>
                <option value="<%= ders[i].id %>" selected><%= ders[i].dersAdi %></option>
            <% } else if(ders[i].sinif_id == unite.sinif_id) { %>
                <option value="<%= ders[i].id %>" ><%= ders[i].dersAdi %></option>
            <% } %>
        <% } %>
      </select>
    </div>
    <br>
    <p class="text text-danger"><strong>Dikkat: </strong>Yaptığınız değişiklikler bu üniteye eklenmiş tüm materyal ve soruları etkiler!</p>
      <button type="submit" class="btn btn-info">Kaydet</button>
  </form>

</div>
<!-- /.row -->