                    <textarea class="form-control" id="itemDesc2" placeholder="Bölüm Açıklaması" name="itemDesc2"><%= about.item2.description %></textarea>
                    </div>
                </div>
            </div>

            <!-- Sağ Bölüm -->
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">Sağ Bölüm</h3>
                </div>
                
                <div class="row">
                    <div class="form-group col-sm-6">
                        <input type="text" class="hidden" id="dosyaYolu3" name="dosyaYolu3" value="<%= about.item3.img.src %>">
                        <img class="col-xs-12" alt="" src="<%= about.item1.img.src %>" />
