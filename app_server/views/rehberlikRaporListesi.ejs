<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Rehberlik Rapor Listesi</h1>
    </div>
    <!-- /.col-lg-12 -->

  <!-- div class="alert alert-success">
  </div -->
  <% if (mesaj == "no") { %>
  <% } else { %>
  <div class="alert alert-danger">
    <strong><%= mesaj %></strong> 
  </div>
  <% } %>

</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <a data-toggle="collapse" href="#col1"><h3 class="panel-title">Detaylı Listeleme</h3></a>
  </div>
  <div class="panel-collapse collapse" id="col1">
    <div class="panel-body">
        Panel content
        Burada butonlar olacak. Sınıfa göre sorular, derse göre sorular v.s
        <button class="btn btn-warning">Sınıfa göre</button>
        <button class="btn btn-danger">Derse göre</button>
        <br>
        <br>
        <div class="row">
            <div class="col-sm-10">
            <select class="form-control">
                <option value="">Sınıf seç</option>
                <option value="9">9. Sınıf</option>
                <option value="10">10. Sınıf</option>
            </select>
            </div>
            <div class="col-sm-2">
            <button class="btn btn-warning">Sınıfa göre</button>
            </div>
        </div>
    </div>
  </div>
</div>
<!-- panel -->

<h3>Rehberlik Rapor Listesi</h3>
<table class="table table-hover table-bordered">

    <thead>
        <tr>
            <th>#</th>
            <th>Seviye</th>
            <th>Sınıf</th>
            <th>Ders</th>
            <th>Tarih</th>
            <th>Ekleyen</th>
        </tr>
    </thead>

    <tbody>
    
        <% for (var i=0; i<rehberlik.length; i++) { %>
            <% if(i%2==0) { %>
                <tr class="info">
            <% }else{ %>
                <tr class="warning">
            <% } %>
            <td><%= i+1 %></td>
            <td><%= rehberlik[i].ogrenim_seviyesi %></td>
            <td><%= rehberlik[i].sinifi %></td>
            <td><%= rehberlik[i].dersAdi %></td>
            <td><%= rehberlik[i].tarih.getDate() %>.<%= rehberlik[i].tarih.getMonth()+1 %>.<%= rehberlik[i].tarih.getFullYear() %></td>
            <td><%= rehberlik[i].kullaniciAdi %></td>
            </tr>
        <% } %>
    </tbody>

</table>

</div>
<!-- /.row -->