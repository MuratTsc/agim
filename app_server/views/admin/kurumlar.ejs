<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Kurumlar</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div class="row">

    <% if (mesaj == "no") { %>
    <% } else { %>
    <div class="alert alert-danger">
    <strong><%- mesaj %></strong> 
    </div>
    <% } %>

</div>

<div class="row">
    <h3>Kurum Listesi</h3>
    <table width="100%" id="dataTable" class="table table-striped table-bordered table-hover">

        <thead>
            <tr>
                <th>#</th>
                <th data-s-type="string">Kurum</th>
                <th data-s-type="string">Subdomain</th>
                <th data-b-sortable="false">Tel 1</th>
                <th data-b-sortable="false">Tel 2</th>
                <th>Mail</th>
                <th>İşlemler</th>
            </tr>
        </thead>

        <tbody>
        
            <% for (var i = 0; i < kurumlar.length; i++) { %>
            <tr>
                
                <td onclick="document.location = 'admin/kurumGoruntuleme/<%= kurumlar[i].id %>';" style="cursor: pointer;"><%= i+1 %></td>
                <td><%= kurumlar[i].kurum_adi %></td>
                <td><%= kurumlar[i].subdomain %></td>
                <td><%= kurumlar[i].telefon1 %></td>
                <td><%= kurumlar[i].telefon2 %></td>
                <td><%= kurumlar[i].mail %></td>
                <td style="text-align: center;">
                    <a href="/admin/kurumDuzenle/<%=kurumlar[i].id%>" class="btn btn-info">Düzenle</a>
                    <!-- a href="/admin/kurumDetay/<%=kurumlar[i].id%>" class="btn btn-success">Detay</a -->
                </td>
                
            </tr>
            <% } %>
        
        </tbody>

    </table>


</div>
<!-- /.row -->
