<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Akademik Kurul</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div class="row">

    <% if (mesaj == "no") { %>
    <% } else { %>
    <div class="alert alert-success">
    <strong><%= mesaj %></strong> 
    </div>
    <% } %>

</div>

    <h3>Akademik Rapor Listesi</h3>
    <table class="table table-hover">

        <thead>
            <tr>
                <th>#</th>
                <th>Dönem</th>
                <th>Rapor No</th>
                <th>Tarih</th>
                <th style="text-align: center;">İşlemler</th>
            </tr>
        </thead>

        <tbody>
        
            <% for (var i = 0; i < akdRaporlar.length; i++) { %>
                <% if(i%2==0) { %>
                    <tr class="info">
                <% } else { %>
                    <tr class="warning">
                <% } %>
                <td><%= i+1 %></td>
                <td><%= akdRaporlar[i].donem %></td>
                <td><%= akdRaporlar[i].raporNo %></td>
                <td><%= akdRaporlar[i].raporTarih.getDate() %>.<%= akdRaporlar[i].raporTarih.getMonth()+1 %>.<%= akdRaporlar[i].raporTarih.getFullYear() %></td>
                <form action="../akademikRaporSil" method="POST">
                    <td style="text-align: center;">
                        <input type="text" class="hidden" id="akdRaporId" name="akdRaporId" value="<%= akdRaporlar[i].id %>">
                        <button type="submit" class="btn btn-danger">Sil</button>
                        <!-- a href="/akademikKurul" class="btn btn-danger">Sil</a -->
                        <a href="/akademikKurul/<%=akdRaporlar[i].id%>" class="btn btn-info">Düzenle</a>
                    </td>
                </form>
                </tr>
            <% } %>
        
        </tbody>

    </table>

