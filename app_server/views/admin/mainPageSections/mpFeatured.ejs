    <form action="/admin/mpFeatured" method="POST">
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Anasayfa - Slayt Alt Bölümü Ayarları
            <label class="switch" title="Bu slaytın aktif olup olmadığını seçin">
            <% if (featured.isActive) { %>
                <input type="checkbox" id="isActive" name="isActive" checked>
            <% } else { %>
                <input type="checkbox" id="isActive" name="isActive">
            <% } %>
                <span class="slider round"></span>
            </label>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div class="row">

    <% if (mesaj == "no") { %>
    <% } else if (mesaj == "ok") { %>
    <div class="alert alert-success">
    <strong>Bilgiler kayıt edildi.</strong> 
    </div>
    <% } else { %>
    <div class="alert alert-danger">
    <strong><%- mesaj %></strong> 
    </div>
    <% } %>

</div>

<div class="row">


        <div class="container col-md-12">
            <!-- Sol Bölüm -->
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">Sol Bölüm</h3>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <div class="form-group col-xs-12 text-center">
                            <i class="<%= featured.item1.icon %>" style="font-size: 50px;"></i>
                        </div>
                            <label for="icon1">Simge Değiştir:</label>
                            <i class="fa fa-info-circle fa-fw" title="Değiştirmek istediğiniz simgenin ion veya fa class değerini girmelisiniz."></i>
                            <input type="text" class="form-control" id="icon1" name="icon1" value="<%= featured.item1.icon %>">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-6">
                    <label for="itemTitle1">Bölüm Başlığı:</label>
                    <input type="text" class="form-control" id="itemTitle1" placeholder="Bölüm Başlığı" name="itemTitle1" value="<%= featured.item1.title %>">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-6">
                    <label for="itemDesc1">Bölüm Açıklaması:</label>
                    <textarea class="form-control" id="itemDesc1" placeholder="Bölüm Açıklaması" name="itemDesc1"><%= featured.item1.description %></textarea>
                    </div>
                </div>
            </div>

            <!-- Orta Bölüm -->
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">Orta Bölüm</h3>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <div class="form-group col-xs-12 text-center">
                            <i class="<%= featured.item2.icon %>" style="font-size: 50px;"></i>
                        </div>
                        <label for="icon2">Simge Değiştir:</label>
                        <i class="fa fa-info-circle fa-fw" title="Değiştirmek istediğiniz simgenin ion veya fa class değerini girmelisiniz."></i>
                        <input type="text" class="form-control" id="icon2" name="icon2" value="<%= featured.item2.icon %>">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-6">
                    <label for="itemTitle2">Bölüm Başlığı:</label>
                    <input type="text" class="form-control" id="itemTitle2" placeholder="Bölüm Başlığı" name="itemTitle2" value="<%= featured.item2.title %>">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-6">
                    <label for="itemDesc2">Bölüm Açıklaması:</label>
                    <textarea class="form-control" id="itemDesc2" placeholder="Bölüm Açıklaması" name="itemDesc2"><%= featured.item2.description %></textarea>
                    </div>
                </div>
            </div>

            <!-- Sağ Bölüm -->
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">Sağ Bölüm</h3>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <div class="form-group col-xs-12 text-center">
                            <i class="<%= featured.item3.icon %>" style="font-size: 50px;"></i>
                        </div>
                        <label for="icon3">Simge Değiştir:</label>
                        <i class="fa fa-info-circle fa-fw" title="Değiştirmek istediğiniz simgenin ion veya fa class değerini girmelisiniz."></i>
                        <input type="text" class="form-control" id="icon3" name="icon3" value="<%= featured.item3.icon %>">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-6">
                    <label for="itemTitle3">Bölüm Başlığı:</label>
                    <input type="text" class="form-control" id="itemTitle3" placeholder="Bölüm Başlığı" name="itemTitle3" value="<%= featured.item3.title %>">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-6">
                    <label for="itemDesc3">Bölüm Açıklaması:</label>
                    <textarea class="form-control" id="itemDesc3" placeholder="Bölüm Açıklaması" name="itemDesc3"><%= featured.item3.description %></textarea>
                    </div>
                </div>
            </div>

            <br><br>
            <div class="row">
                <input type="submit" class="btn btn-info col-sm-6 col-xs-12" value="Kaydet">
            </div>
            <br><br>
        </div>


</div>
    </form>
<!-- /.row -->