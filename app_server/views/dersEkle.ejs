<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Ders Ekle</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">

  <% if(mesaj=="ok" ) { %>
  <div class="alert alert-success" id="okMesaj" name="okMesaj">
    <strong>Ders eklendi.</strong>
  </div>
  <% } %>
  <% if(mesaj=="err" ) { %>
  <div class="alert alert-danger" id="errMesaj" name="errMesaj">
    <strong>Hata! </strong>Ders eklenemedi!
  </div>
  <% } %>
  

<form action="../dersEkle" method="POST">

    <div class=row>
        <div class="form-group col-sm-6">
        <label for="dersAdi">Ders Adı:</label>
        <input type="text" class="form-control" id="dersAdi" placeholder="Ders Adı" name="dersAdi" required="true">
        </div>
    </div>

    <div class=row>
        <div class="form-group col-sm-6">
        <label for="sinif">Sınıfı:</label>
        <select class="form-control" id="sinif" name="sinif" required="true">
            <option value="" selected>Seçiniz</option>
            <% for (var i=0; i < sinif.length; i++) { %>
                <option value="<%= sinif[i].id %>" ><%= sinif[i].sinifi %></option>
            <% } %>
        </select>
        </div>
    </div>
    
    <br><br>
    <div class=row>
        <div class="form-group col-sm-6">
        <input type="submit" class="btn btn-info col-sm-4" value="Kaydet">
        </div>
    </div>
  </form>

</div>
<!-- /.row -->